rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access for the next 30 days.
    // WARNING: This is not secure for a production app.
    // We will implement user authentication later.
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 10, 12);
    }
  }
}
