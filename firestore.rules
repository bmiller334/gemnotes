rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for the 'notes' collection
    match /notes/{noteId} {
      // A user can create a note if the new note's userId matches their own.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // A user can read, update, or delete a note if it already exists and its userId matches.
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Rules for the 'doss' collection
    match /doss/{dossId} {
      // A user can create a doss if the new doss's userId matches their own.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // A user can read, update, or delete a doss if it already exists and its userId matches.
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
